{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/NaverPayDev/cli/packages/commithelper/src/schema.json",
    "title": "Schema for .commithelperrc.json",
    "type": "object",
    "properties": {
        "protect": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "rules": {
            "type": "object",
            "properties": {
                "repo": {
                    "type": "string"
                },
                "feature": {
                    "type": "string"
                },
                "qa": {
                    "type": "string"
                }
            }
        }
    }
}
